/* components/product/product.wxss */
/* 产品 */
.product_box{
  padding-bottom: 30rpx;
  border-bottom: 1px solid #EDEEF0;
  margin-bottom: 30rpx;
}
.margin{
  margin-top: 12rpx;
  padding: 45rpx;
  background-color: #fff;
}
.product_box:last-child{
  border-bottom:unset;
  margin: 0;
  padding: 0;
}
.product_title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 25rpx;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	line-height: 48rpx;
  color: #1b1b1b;
  padding-bottom: 20rpx;
}
.product_info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	line-height: 48rpx;
	color: #959595;
}
.product_info .text{
  font-family: AvenirLTStd-Heavy;
	font-size: 36rpx;
	line-height: 48rpx;
	letter-spacing: -2rpx;
  color: #1b1b1b;
  padding: 0 10rpx;
}

.increase{
  font-family: AvenirLTStd-Heavy;
	font-size: 42rpx;
	letter-spacing: -2rpx;
	color: #fd6036;
}
.booked_info{
  margin-top: 20rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  padding: 0 30rpx;
	border-radius: 10rpx;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	line-height: 80rpx;
	color: #1b1b1b;
}
.booked_info .unit{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: 600;
	color: #fd6036;
}
.delete{
  width: 25rpx;
	height: 26rpx;
}