.item_box{
  padding: 45rpx;
  margin-top: 12rpx;
  background-color: #fff;
}
.interest_box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:  60rpx 0;
  gap: 40rpx;
}
.interest_box .text{
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: -1rpx;
	color: #959595;
}
.interest_box .interest{
  font-family: AvenirLTStd-Heavy;
	font-size: 80rpx;
	letter-spacing: -4rpx;
	color: #fd6036;
}
.progress-percent{
  text-align: center;
  font-family: AvenirLTStd-Heavy;
	font-size: 18rpx;
	line-height: 48rpx;
	letter-spacing: -1rpx;
	color: #959595;
}
.summary{
  margin-top: 45rpx;
  display: flex;
}
.summary-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}
.summary-item text{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	color: #959595;
}
.summary-item view{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	color: #1b1b1b;
}
.summary .line{
  width: 1px;
  background-color: #E5E5E5;
}
/* condition */
.condition{
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.condition_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.condition_item text{
	color: #959595;
}
.condition_item .btn{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
  color: #fd6036;
  display: flex;
  align-items: center;
  gap: 25rpx;
}
/* 产品信息 */
.product_info{
  margin-top: 12rpx;
  background-color: #fff;
}
.product_info .title{
  height: 80rpx;
  padding: 0 45rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #DCDCDC;
}
.product_info .title .text{
  font-family: MicrosoftYaHei;
  font-weight: bold;
	font-size: 32rpx;
	color: #fd6036;
}
.product_info .content{
  padding: 45rpx;
}

/*文字 */
.text_box{
  margin-top: 12rpx;
  background-color: #fff;
}
.text_box .title{
  height: 80rpx;
  padding: 0 45rpx;
  display: flex;
  align-items: center;
  gap: 25rpx;
  border-bottom: 1px solid #DCDCDC;
}
.text_box .title image{
  width: 24rpx;
	height: 24rpx;
}
.text_box .title .text{
  font-family: MicrosoftYaHei;
  font-weight: bold;
	font-size: 32rpx;
	color: #1b1b1b;
}
.text_box .content{
  padding: 45rpx;
}
.text_box .content text{
  white-space: pre-wrap;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #1b1b1b;
}
/* 文件 */
.flie_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fd613625;
  border-radius: 10rpx;
  padding: 18rpx 30rpx;
}
.flie_item .name{
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 28rpx;
	color: #1b1b1b;
}
.flie_item .name .pdf{
  width: 31rpx;
	height: 35rpx;
}