
.content{
  height: 100%;
  position: relative;
  width: 100%;
  background: linear-gradient(135deg, red,black,yellow);
  overflow: hidden;
}
image{
  height: 100%;
  width: 100%;
}
.mask{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.appname{
  width: 100%;
  text-align: center;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: #fff;
  font-size: 120rpx;
  padding-bottom: 40rpx;
  text-align: center;
  text-shadow:0px 1px 0px #c0c0c0,    
	 0px 2px 0px #b0b0b0,    
	 0px 3px 0px #a0a0a0,    
	 0px 4px 0px #909090,    
   0px 5px 10px rgba(0, 0, 0, .9);
   /* text-shadow: 0 0 0.5em #F5DF4D, 0 0 0.2em #5c5c5c; */
    transition: .2s all linear;
}
form{
  box-sizing: border-box;
  width: 100%;
}
.formSubmit{
  width: 100%;
  height: 240rpx;
  padding-bottom: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
input{
  width: 60%;
  border-bottom: 1rpx solid white;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  color: white;
}
.loginBtn{
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
button{
  width: 50% !important;
  color: white !important;
  border-radius: 42rpx !important;
  border-color: white !important;
}
