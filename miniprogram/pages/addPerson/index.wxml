
<view class="caontent">
  <view class="photo">
    <view class="back">
      <image src="{{imgUrl}}" mode="aspectFill"></image>
    </view>
    <view class="avatar">
      <image src="{{userInfo.avatar?userInfo.avatar:'../../static/icon/upImg.png'}}" data-type="avatar"  mode="aspectFill" bindtap="upImage"></image>
    </view>
  </view>
  <form catchsubmit="formSubmit">
  <view class="form">
    
    <view class="inputOuter">
      <view class="label">彝族名:</view>
      <input name="yiwen" cursor-spacing="140"  maxlength="2" value="{{userInfo.yiwen}}" placeholder="彝文(限两个字)"/>
    </view>
    <view class="inputOuter">
      <view class="label">音译名:</view>
      <input name="hanwen" cursor-spacing="140"  value="{{userInfo.hanwen}}"maxlength="2" placeholder="汉文(限两个字)"/>
    </view>
    <view class="pickerOuter">
      <view class="label">学历:</view>
      <picker value="{{item}}" range="{{diplomas}}" data-type="diploma" bindchange="bindPickerChange">
        <view wx:if="{{!userInfo.diploma}}"  class="myplaceholder">请选择</view>
        <view wx:else>{{userInfo.diploma}}</view>
      </picker>
    </view>
    <view class="pickerOuter">
      <view class="label">职业:</view>
      <picker bindchange="bindPickerChange" data-type="job" value="{{index}}" range="{{jobs}}">
        <view wx:if="{{!userInfo.job}}"  class="myplaceholder">请选择</view>
        <view wx:else>{{userInfo.job}}</view>
      </picker>
    </view>
    <view class="radioOuter">
      <view class="label">性别:</view>
      <radio-group name="isBoy" data-type="isBoy"   bindchange="bindChange">
          <label><radio checked="{{userInfo.isBoy==='true'}}" color="#67C23A" value="true"/>男</label>
          <label><radio checked="{{userInfo.isBoy==='false'}}"  color="#67C23A" value="false"/>女</label>
      </radio-group>
    </view>
    <view class="radioOuter">
      <view class="label">是否已婚:</view>
      <radio-group name="isMerry"  data-type="isMerry" bindchange="bindChange">
          <label><radio checked="{{userInfo.isMerry==='true'}}" color="#67C23A" value="true"/>是</label>
          <label><radio checked="{{userInfo.isMerry==='false'}}"  color="#67C23A" value="false"/>否</label>
        </radio-group>
    </view>
    <view class="radioOuter">
      <view class="label">是否去世:</view>
      <radio-group name="isGone" data-type="isGone" bindchange="bindChange">
          <label><radio value="true" color="#67C23A" checked="{{userInfo.isGone==='true'}}"/>是</label>
          <label><radio value="false" color="#67C23A" checked="{{userInfo.isGone ==='false'}}"/>否</label>
        </radio-group>
    </view>
    <view class="inputOuter" wx:if="{{userInfo.isGone==='false'&&isManager}}">
      <view class="label">联系电话:</view>
      <input name="phone" value="{{userInfo.phone}}" cursor-spacing="140" type="number"  maxlength="11" placeholder="请完善电话"/>
    </view>
    <view class="inputOuter" wx:if="{{userInfo.isGone==='false'&&isManager}}">
      <view class="label">微信号码:</view>
       <input name="wechat" cursor-spacing="140"  value="{{userInfo.wechat}}" placeholder="请完善微信号"/>
    </view>
    <view class="provinceOuter" wx:if="{{isManager}}">
      <view class="label">户籍地址:</view>
      <view class="input">
        <input placeholder-class="placeholder" name="province" cursor-spacing="140"  value="{{userInfo.province}}" placeholder="请填写"/>
        <text>省</text>
        <input placeholder-class="placeholder"name="city" cursor-spacing="140"  value="{{userInfo.city}}" placeholder="请填写" />
        <text>市/州</text>
        <input placeholder-class="placeholder"name="county" cursor-spacing="140"  value="{{userInfo.county}}" placeholder="请填写" />
        <text>县</text>
      </view>
    </view>
    <view class="inputOuter">
      <view class="label">出生年份：</view>
       <input name="birth" type="number" maxlength="4" cursor-spacing="140"  value="{{userInfo.birth}}" placeholder="出生年份 如：1936"/>
    </view>
    <view class="inputOuter" wx:if="{{userInfo.isGone==='true'}}">
      <view class="label">过世年份：</view>
       <input name="death" type="number" maxlength="4"   cursor-spacing="140"  value="{{userInfo.death}}" placeholder="出生年份 如：200"/>
    </view>
    <view class="inputOuter">
      <view class="label">详细住址:</view>
      <input name="address"   cursor-spacing="140"  value="{{userInfo.address}}" placeholder="家庭详细住址(非必填)" />
    </view>
    <view class="textareaOut">
      <view class="label">个人简介:</view>
      <textarea name="brief" show-confirm-bar="{{false}}" cursor-spacing="140" value="{{userInfo.brief}}" maxlength='-1' placeholder="个人简介（非必填）" />
    </view>
  </view>
  <view class="button-sp-area">
    <button type="primary" size="default" form-type="submit">提 交</button>
  </view>
  </form>
</view>