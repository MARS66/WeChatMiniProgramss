.caontent{
  width: 100%;
}
.photo{
  width: 100%;
  height: 300rpx;
  position: relative;
  background-color: #939597;
}
.back{
  width: 100%;
  height: 100%;
}
.back>image{
  width: 100%;
  height: 100%;
}
.avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #939597;
  border: 1rpx solid #939597;
  overflow: hidden;
  position: absolute;
  bottom: -80rpx;
  left: 80rpx;
}
.avatar image{
  width: 100%;
  height: 100%;
}
.form{
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx ;
  padding-top: 90rpx;
  font-size: larger;
}
.label{
  text-align: right;
  width: 180rpx;
  padding-right: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
}

.inputOuter{
  padding: 10rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.myplaceholder{
  color: #939597;
}
.inputOuter>input{
  width: 450rpx;
  padding: 10rpx 6rpx;
  font-size: 30rpx;
  color: #303133;
 border-bottom: 1rpx solid  #E5E5E5;
}

picker{
  width: 450rpx;
  padding: 10rpx 6rpx;
  font-size: 30rpx;
  color: #303133;
 border-bottom: 1rpx solid  #E5E5E5;
}
.provinceOuter{
  display: flex;
  align-items: flex-start;
  padding-top: 10rpx;
}
.input{
  flex: 1;
  display: flex;
  justify-content: start;
  justify-items: center;
  flex-wrap: wrap;
  font-size: 30rpx;
  color: #303133;
}
.input>input{
  flex-grow: 1;
  text-align: start;
  height: 45rpx;
  line-height: 45rpx;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid  #E5E5E5;
}
.input :nth-child(1){
  width: 100rpx;
}
.input :nth-child(3){
  width: 200rpx;
}
.input :nth-child(5){
  width: 400rpx;
}
.input>text{
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 10rpx 10rpx ;
  border-bottom: 1rpx solid  #E5E5E5;
}
radio-group{
  padding: 12rpx 6rpx;
  font-size: 30rpx;
}
radio-group label{
  margin-right: 40rpx;
}
.radioOuter{
  padding: 6rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.pickerOuter{
  padding: 6rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.button-sp-area{
  padding-top: 60rpx;
}
button{
  width: 100% !important;
  margin-top: 30rpx;
}
button[type='primary'] {
  border-radius: unset !important;
  background-color: #F5DF4D !important;
  padding: 0;
  height: 100rpx;
  line-height: 100rpx;
  color: #000;
}
.textareaOut{
  margin-top: 20rpx;
  padding: 10rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.textareaOut >textarea{
  flex: 1;
  font-size: 30rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 8rpx;
  padding: 10rpx;
}