<view class="container" style="height:{{editorHeight}}px;">
  <editor id="editor" class="ql-container" show-img-size="{{true}}" show-img-resize="{{true}}" placeholder="{{placeholder}}" bindstatuschange="onStatusChange" bindready="onEditorReady">
  </editor>
  <button class="submit" bindtap="submitFamilyInfo" hidden="{{keyboardHeight > 0 ?  true: false }}" >提交</button>
</view>

<view class="toolbar" catchtouchend="format"  hidden="{{keyboardHeight > 0 ? false : true}}" style="bottom: {{isIOS ? keyboardHeight : 0}}px">
  
  <i class="iconfont icon-undo" catchtouchend="editorCtxComen" data-funcName="undo"></i>
  <i class="iconfont icon-redo" catchtouchend="editorCtxComen" data-funcName="redo"></i>
  <i class="iconfont icon-charutupian" catchtouchend="insertImage"></i>
  <i class="iconfont icon-format-header-{{header}}" data-name="header" data-value="{{header}}"></i>
  <i class="iconfont icon-align-{{align[alignIndex-1]}}" data-name="align" data-value="{{align[alignIndex-1]}}"></i>
  <i class="iconfont icon-text_color"  style="color:{{colors[colorIndex-1]}}" data-name="color" data-value="{{colors[colorIndex-1]}}"></i>
  <i class="iconfont icon-zitijiacu {{formats.bold ? 'ql-active' : ''}}" data-name="bold"></i>
  <i class="iconfont icon-zitixieti {{formats.italic ? 'ql-active' : ''}}" data-name="italic"></i>
  <i class="iconfont icon-zitixiahuaxian {{formats.underline ? 'ql-active' : ''}}" data-name="underline"></i>
  <!-- <i class="iconfont icon--checklist" data-name="list" data-value="check"></i> -->
  <i class="iconfont icon-youxupailie {{formats.list === 'ordered' ? 'ql-active' : ''}}" data-name="list" data-value="ordered"></i>
  <i class="iconfont icon-wuxupailie {{formats.list === 'bullet' ? 'ql-active' : ''}}" data-name="list" data-value="bullet"></i>
</view>