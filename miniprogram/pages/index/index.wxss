
.content{
  height: 100%;
  position: relative;
  width: 100%;
  background-color: #939597;
  background: linear-gradient(to bottom, red,black,yellow);
  overflow: hidden;
}
.mask{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.formSubmitOut{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.login{
  width: 60%;
  height: 400rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  background-color: #000;
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.appname{
  width: 60%;
  text-align: center;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: #fff;
  font-size: 120rpx;
  padding-bottom: 40rpx;
  text-align: center;
  text-shadow:0px 1px 0px #c0c0c0,    
	 0px 2px 0px #b0b0b0,    
	 0px 3px 0px #a0a0a0,    
	 0px 4px 0px #909090,    
   0px 5px 10px rgba(0, 0, 0, .9);
   /* text-shadow: 0 0 0.5em #F5DF4D, 0 0 0.2em #5c5c5c; */
    transition: .2s all linear;
}
form{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
.formSubmit{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
input{
  width: 100%;
  border-bottom: 1rpx solid #fff;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  color: white;
}
.loginBtn{
  width: 100%;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
}
button{
  width: 80%;
  box-sizing: border-box;
  margin: 0 !important;
  height: 60rpx;
  line-height:  60rpx !important;
  padding: 0 !important;
}
button[type='default'][plain] {
  width: 140rpx;
  color: #F5DF4D !important;
  font-size: 24rpx;
  font-weight: normal;
  border: none !important;
  background-color: transparent;
}
button[type='primary']{
  width: 100rpx !important;
  background-color: #F5DF4D !important;
  font-weight: 600 !important;
  opacity: 1 !important;
  color: #000 !important;
  border: 1px solid #F5DF4D !important;
  font-size: 24rpx;
  font-weight: normal;
}