
.content{
  height: 100%;
  position: relative;
  width: 100%;
  overflow: hidden;
}
.backgroud{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.mask{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.formSubmitOut{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.appname{
  width: 60%;
  text-align: center;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: #fff;
  font-size: 140rpx;
  padding-bottom: 40rpx;
  text-align: center;
  text-shadow:0px 1px 0px #c0c0c0,    
	 0px 2px 0px #b0b0b0,    
	 0px 3px 0px #a0a0a0,    
	 0px 4px 0px #909090,    
   0px 5px 10px rgba(0, 0, 0, .9);
   /* text-shadow: 0 0 0.5em #F5DF4D, 0 0 0.2em #5c5c5c; */
    transition: .2s all linear;
}
.login{
  width: 60%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
form{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
.formSubmit{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 80rpx;
}
input{
  width: 100%;
  border-bottom: 1rpx solid #fff;
  display: block;
  font-size: 32rpx;
  line-height: 50rpx;
  margin: 20rpx 0;
  padding:6rpx ;
  color: white;
}
.input{
  color: white;
}
button{
  height: 100rpx;
  font-weight: normal !important;
  width: 100% !important;
  color: #fff;
  border: 1px solid #fff;
  letter-spacing: 3px;
  border-radius: 50rpx !important;
}
.submit_hover{
  background-color: yellow;
  color: #000;
  border-color: yellow;
}
.copyRight{
  padding: 20rpx 0;
  width: 100%;
  position: absolute;
  bottom: 0;
  text-align: center;
  color: #fff;
  font-size: 12px;
}