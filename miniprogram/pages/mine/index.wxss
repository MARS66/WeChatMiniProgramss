page{
  background-color: rgb(228, 227, 227);
}
.photo{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.back{
  width: 100%;
  height: 100%;
}
.back::after{
  content: '';
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.1;
  position: absolute;
  top: 0;
  left: 0;
}
.back>image{
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 120rpx 0 120rpx 40rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
}
.avatar>image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #939597;
  border: 1rpx solid rgba(216, 214, 214, 0.295);
} 

.userInfo{
  font-size: 40rpx;
  color: #fff;
  padding: 0 30rpx;
  display: flex;
}
.auth{
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  position: relative;
  top: -100rpx;
  width: 90%;
  min-height: 60vh;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
}
.column{
  display: grid;
  grid-template-columns: repeat(3,1fr);
  gap: 30rpx;
}
.item{
  width: 100% !important;
  height: 160rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item>image{
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 20rpx;
}
.item>view{
  font-size:small;
  font-weight: normal;
}