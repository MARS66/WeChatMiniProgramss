page{
  background-color: rgb(228, 227, 227);
}
.photo{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.back{
  width: 100%;
  height: 100%;
}
.back::after{
  content: '';
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.4;
  position: absolute;
  top: 0;
  left: 0;
}
.back>image{
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 120rpx 0 120rpx 40rpx;
  display: flex;
  /* flex-direction: column; */
  justify-content: start;
  align-items: center;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
}
.avatar>image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #939597;
  border: 1rpx solid rgba(216, 214, 214, 0.295);
} 
.underphoto{
  width: 100%;
  padding-left: 190rpx;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
}
.userInfo{
  height: 100%;
  display: flex;
  color: #e9e9e9;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 0 10rpx;
}
.familyType{
  font-size: large;
  font-weight: 500;
}
.name{
  font-size: medium;
  display: flex;
  color: #e9e9e9;
  justify-content: start;
  align-items: center;
}
.yzm{
  font-weight: 500;
  font-size: large;
  padding-right:10rpx;
}
.gender{
  display: flex;
  justify-items: center;
  align-items: flex-end;
  font-weight: 400;
  height: 34rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  text-align: center;
  line-height: 34rpx;
  background-color: black;
  color: #fff;
  padding-left:10rpx;
  margin-left: 10rpx;
}
.isGone{
  height: 30rpx;
  line-height: 30rpx;
  padding: 2rpx  10rpx 2rpx 10rpx;
  margin-left: 10rpx;
  background-color: tomato;
}
.auth{
  box-sizing: border-box;
  padding: 20rpx 40rpx;
position: relative;
top: -100rpx;
width: 90%;
margin: 0 auto;
border-radius: 10rpx;
background-color: #fff;
}
.column{
  display: flex;
  justify-content: space-between;
}
.item{
  width: 140rpx;
  height: 160rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item>image{
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 20rpx;
}
.item>view{
  font-size:small;
  font-weight: normal;
}