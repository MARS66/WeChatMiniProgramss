page{
  background-color: rgb(228, 227, 227);
}
.photo{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.back{
  width: 100%;
  height: 100%;
}
.back::after{
  content: '';
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.1;
  position: absolute;
  top: 0;
  left: 0;
}
.back>image{
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 120rpx 0 120rpx 40rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
}
.avatar>image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #F5DF4D;
  border: 1rpx solid #F5DF4D;
} 

.userInfo{
  font-size: 40rpx;
  color: #fff;
  padding: 0 30rpx;
}
.userInfo view{
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #F5DF4D;
}
.navigator-hover{
  background-color: unset;
}
.auth{
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  position: relative;
  top: -100rpx;
  width: 90%;
  min-height: 60vh;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
}
.column{
  display: grid;
  grid-template-columns: repeat(3,1fr);
  gap: 30rpx;
}
.item{
  width: 100% !important;
  height: 160rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item>image{
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 20rpx;
}
.item>view{
  font-size:small;
  font-weight: normal;
}
.dialog{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.301);
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog_content{
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  width: 60%;
}
.dialog_header{
  text-align: center;
  font-weight: 600;
}
.dialog_body{
  padding: 40rpx 0;
}
.dialog_body input{
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #E4E7ED;
  color: #606266;
}
.dialog_btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dialog_btn button{
  margin: 0 !important;
  width: unset !important;
  padding: 6rpx 48rpx;
}
.dialog_btn button:last-child{
  color:#409EFF;
}
.dialog_body .tip{
  font-size: 12px;
  color: #909399;
}