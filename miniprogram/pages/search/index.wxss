
.search{
  height: 300rpx ;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.search>image{
  height: 300rpx ;
  width: 100%;
}
.search>view{
  height: 300rpx ;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-input{
  display: flex;
  width: 80%;
  height: 80rpx;
  border: 1px solid #000;
  justify-content: start;
  border-radius: 40rpx;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.8);
}
.container{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  margin-top: 300rpx;
  overflow-y: auto;
}
.all{
  width: 100%;
}
.search-input>input{
  flex: 1;
  color: white;
  padding: 0 30rpx;
  font-size: 30rpx;
}
.search-input>.icon-small{
  color: #000;
  padding: 0 20rpx;
}
.placeholder{
  color: rgba(224, 221, 221, 0.993);
}
.photoOuter{
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  width: 100%;
}
.title{
  padding: 10rpx 0;
  font-weight: 600;
  font-size: 34rpx;
  text-align: start;
}
.list{
  display: grid;
  grid-template-columns: repeat(4,1fr);
  padding: 20rpx 0;
  gap:40rpx 20rpx;
}
.smallhoto{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.smallhoto>image{
  width: 140rpx;
  height: 140rpx;
  background-color:#939597;
  border: 2px solid #F5DF4D;
  border-radius: 50%;
  object-fit: cover;
}
.smallhoto>view{
  box-sizing: border-box;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-weight: 600;
  background: #F5DF4D;
  padding: 4rpx 20rpx;
  letter-spacing: 1rpx;
}
.smallhoto>.isGone{
  background-color: #939597;
}
.smallhoto>view text:first-child{
  font-size: 30rpx;
}
.epmty{
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 10rpx;
  height: 200rpx;
}
.epmty2{
  color: blue;
}